<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QualquerFlix.Filmes.uncharted"
             BackgroundColor="#2f2f30">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical">

            <Grid ColumnDefinitions="*, *" RowDefinitions="*, *">
                <WebView x:Name="visualizador" Grid.ColumnSpan="2" Grid.Row="0" Grid.Column="0"
                         VerticalOptions="FillAndExpand" BackgroundColor="Black"/>

                <Image x:Name="poster" Grid.Row="1" Grid.Column="0" Aspect="AspectFill" />
                <StackLayout Grid.Row="1" Grid.Column="1">
                    <Label Text="Nome: " Style="{StaticResource LabelVermelho}" />
                    <Label Text="Uncharted: Fora do Mapa" Style="{StaticResource LabelBranco}" />
                    <Label />
                    <Label Text="Ano de lançamento: " Style="{StaticResource LabelVermelho}" />
                    <Label Text="2022" Style="{StaticResource LabelBranco}" />
                    <Label />
                    <Label Text="Direção: " Style="{StaticResource LabelVermelho}" />
                    <Label Text="Ruben Fleischer" Style="{StaticResource LabelBranco}" />


                </StackLayout>



            </Grid>




        </StackLayout>
    </ContentPage.Content>
</ContentPage>